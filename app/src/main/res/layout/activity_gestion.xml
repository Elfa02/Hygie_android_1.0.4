<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.utt.if26.hygie.MainActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listViewPatients"
        android:layout_width="0dp"
        android:layout_height="278dp"
        android:layout_marginBottom="64dp"
        android:layout_marginTop="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/GridLayout1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="0dp"
        android:layout_height="84dp"
        android:columnCount="4"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewPatients"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0">

        <TextView
            android:id="@+id/LabelVNOM"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Nom : "
            android:layout_gravity="fill"/>

        <TextView
            android:id="@+id/txtVNOM"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text=""
            android:layout_gravity="fill"/>

        <TextView
            android:id="@+id/txtVRPPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:textStyle="bold"
            android:text=""
            android:layout_gravity="fill"/>

        <TextView
            android:id="@+id/LabelPrenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Prenom : "
            android:layout_gravity="fill"/>

        <TextView
            android:id="@+id/txtPrenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:textStyle="bold"
            android:text=""
            android:layout_gravity="fill"/>

        <TextView
            android:id="@+id/LabelVRPPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="numÃ©ro RPPS : "
            android:layout_gravity="fill"/>

        <TextView
            android:id="@+id/LabelVID"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:text="Identifiant : "
            android:layout_gravity="fill"/>

        <TextView
            android:id="@+id/txtVID"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:textStyle="bold"
            android:text=""
            android:layout_gravity="fill"/>

        <TextView
            android:id="@+id/LabelVMAIL"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Email : "
            android:layout_gravity="fill"/>

        <TextView
            android:id="@+id/txtVMAIL"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_gravity="fill"
            android:textStyle="bold"
            android:text=""
/>

    </GridLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GridLayout1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
